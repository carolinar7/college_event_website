// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

enum Role {
    SUPERADMIN
    ADMIN
    STUDENT
}

model User {
    id            String    @id @default(cuid())
    email         String    @unique
    fName         String
    lName         String
    password      String
    role          Role      @default(STUDENT)

    @@index([email])
}

model University {
    id  String @id @default(uuid())
    name String
    location String
    description String
    numStudents Int
    emailDomain String
}
